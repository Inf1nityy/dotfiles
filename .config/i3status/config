time {
    format = "%a %b %d %I:%M %p"
}

load {
    format = "%5min"
}

memory {
    format = "%used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

disk "/" {
    format = "%free"
}
